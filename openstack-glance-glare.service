[Unit]
Description=OpenStack Image Service (code-named Glance) Artifacts server
After=syslog.target network.target

[Service]
Type=simple
User=glance
ExecStart=/usr/bin/glance-glare --config-file /usr/share/glance/glance-glare-dist.conf --config-file /etc/glance/glance-glare.conf
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target

